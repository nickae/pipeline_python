pipeline 
{
    agent any 

    environment 
    {
        PATH = "$PATH:/var/lib/jenkins/.local/bin"
    }

    stages 
    {
        stage('setup-env') 
        {
            steps 
            {
                echo 'Setup stage: Install dependencies in a virtual environment'
                sh 'python3 --version'
                sh 'python3 -m venv venv'
                 sh 'python3 --version'
                sh '. venv/bin/activate'
                sh 'pip3 install --break-system-packages -r requirements.txt'
            }
        }
        stage('analyze') 
        {
            steps 
            {
                echo 'Analysis stage: Analyze the source code using pylint' 
                sh 'pylint multimeter/multimeter.py --output-format=json:pylint-report.json'
            }
        }
        stage('test') 
        {
            steps 
            {
                echo 'Test stage: run the test cases' 
               	sh 'python3 multimeter/multimeter_test.py'
            }
        }
        stage('build') 
        {
            steps {
                echo 'Build stage: Create wheel file from the source code'
                sh '''
                    . venv/bin/activate
                    pip3 install wheel
                    python3 setup.py bdist_wheel  # Build the wheel file
                '''
            }
        }
        stage('archive') {
            steps {
                echo 'Archiving wheel files'
                archiveArtifacts artifacts: 'dist/*.whl', allowEmptyArchive: true
                sh 'pwd'
            }
        }
        stage('docker-build') {
            steps {
                echo 'Docker Build stage: Build a Docker image with the wheel file'
                sh '''
                    # Build the Docker image, tagging it with the name "myimage"
                    docker build -t myimage:latest .
                '''
            }
        }
        stage('upload-to-nexus') {
                    steps {
                        echo 'Upload stage: Upload the artifact to Nexus repository'
                        script {
                            def nexusUrl = "http://localhost:8081/repository/my-repo/"
                            def artifact = "dist/*.whl"  // Change this to your actual artifact path
                            def nexusUsername = "admin"  // Set the Nexus username
                            def nexusPassword = "admin123"  // Set the Nexus password
        
                            // Upload using curl
                            sh """
                                curl -u $nexusUsername:$nexusPassword --upload-file $artifact $nexusUrl
                            """
                        }
                    }
                }
            

        stage('teardown-env') 
        {
            steps 
            {
                echo 'Teardown stage: Remove virtual environment'
                //sh 'deactivate'
            }
        }    
    }
}
